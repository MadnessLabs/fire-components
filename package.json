{
  "name": "@madnesslabs/fire-components",
  "version": "0.0.1",
  "description": "A set of Firebase web components",
  "module": "dist/esm/index.js",
  "main": "dist/index.js",
  "types": "dist/types/components.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "stencil build",
    "start": "stencil build --dev --watch --serve",
    "test": "jest",
    "test.watch": "jest --watch"
  },
  "dependencies": {
    "@ionic/core": "^4.0.0-beta.11",
    "firebase": "^5.5.1",
    "rxfire": "^3.0.3",
    "rxjs": "^6.3.2"
  },
  "devDependencies": {
    "@stencil/core": "^0.13.0-13",
    "@types/jest": "^23.3.1",
    "jest": "^23.4.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/madnesslabs/fire-components.git"
  },
  "author": "Madness Labs",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/madnesslabs/fire-components/issues"
  },
  "homepage": "https://github.com/madnesslabs/fire-components",
  "jest": {
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/node_modules/@stencil/core/testing/jest.preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(tsx?|jsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json",
      "jsx"
    ]
  }
}
